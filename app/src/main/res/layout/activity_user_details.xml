<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".UserDetails">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/userprofile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="User Profile"
           android:textColor="@color/white"
           android:textSize="40dp"
           android:textAlignment="center"
           android:gravity="center"
           android:layout_margin="15dp"/>

       <androidx.cardview.widget.CardView
           android:id="@+id/picture"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_below="@id/userprofile"
           android:layout_centerHorizontal="true"
           app:cardPreventCornerOverlap="false"
           app:cardCornerRadius="75dp"
           android:layout_margin="15dp"
           android:layout_gravity="center"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Name"
           android:id="@+id/name"
           android:drawablePadding="20dp"
           android:layout_below="@id/picture"
           android:drawableLeft="@drawable/ic_baseline_person_outline_24"
           android:background="#30ffffff"
           android:textColorHint="@color/white"
           android:textColor="@color/white"
           android:layout_margin="10dp"
           android:padding="20dp"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Student ID"
           android:id="@+id/stdid"
           android:drawablePadding="20dp"
           android:drawableLeft="@drawable/ic_baseline_document_scanner_24"
           android:background="#30ffffff"
           android:layout_below="@id/name"
           android:textColorHint="@color/white"
           android:textColor="@color/white"
           android:layout_margin="10dp"
           android:padding="20dp"/>

       <TextView
           android:id="@+id/thoska"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/stdid"
           android:text="Thoska Details"
           android:textStyle="bold"
           android:textSize="30sp"
           android:textColor="@color/white"
           android:layout_centerHorizontal="true"
           android:layout_margin="10dp"/>

       <TextView
           android:id="@+id/validity"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/thoska"
           android:text="Validity Date"
           android:drawablePadding="20dp"
           android:drawableLeft="@drawable/ic_baseline_access_time_24"
           android:background="#30ffffff"
           android:textColorHint="@color/white"
           android:textColor="@color/white"
           android:layout_margin="20dp"
           android:inputType="date"
           android:padding="20dp"/>

       <TextView
           android:id="@+id/balance"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/validity"
           android:text="Available Balance"
           android:drawablePadding="20dp"
           android:drawableLeft="@drawable/ic_baseline_attach_money_24"
           android:background="#30ffffff"
           android:textColorHint="@color/white"
           android:textColor="@color/white"
           android:layout_margin="10dp"
           android:inputType="number"
           android:padding="20dp"/>

       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/purchaseBtn"
           android:layout_below="@id/balance"
           android:text="Make Purchase"
           android:backgroundTint="@color/purple_500"
           android:layout_centerHorizontal="true"
           android:layout_margin="10dp"
           />

       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/recharge"
           android:layout_below="@id/purchaseBtn"
           android:text="Recharge"
           android:backgroundTint="@color/purple_500"
           android:layout_centerHorizontal="true"
           android:layout_margin="10dp"
           />
   </RelativeLayout>


</ScrollView>